<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id = "bean1" class = "com.shadab.demo.bean.BeanScopesBean1" scope="prototype" init-method="initilizeMyBean" destroy-method="destroyMyBean">
      <property name = "name" value = "mohammad"/>
   </bean>

   <bean id = "bean2" class = "com.shadab.demo.bean.BeanScopesBean2" scope="singleton" init-method="initilizeMyBean" destroy-method="destroyMyBean">
      <property name = "name" value = "shadab"/>
      
   </bean>
</beans>